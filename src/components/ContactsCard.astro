---
import Card from "./Card/index.astro";
import { LINKS } from "../lib/constants";
---

<Card colSpan="md:col-span-1" rowSpan="md:row-span-4">
  <div class="h-full">
    <header class="flex items-center">
      <h1 class="text-white text-xl font-bold">
        You should try this simple game !
      </h1>
    </header>
    <div class="flex flex-col mt-4 w-fit">
      <h2 class="text-gray-500">Click to play game</h2>
      <ul>
        <li>
          <a href={LINKS.game} target="_blank">Puzzle game</a>
          <img src="/src/components/treeTheme.jpg" width="50" height="50" />
        </li>
      </ul>
    </div>
  </div>
</Card>
